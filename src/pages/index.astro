---
import Layout from '@layouts/Layout.astro'
import Hero from '@components/Hero.astro'
import Experience from '@components/Experience.astro'
import Stack from '@components/Stack.astro'
import FeaturedWork from '@components/work/FeaturedWork.astro'
import Testimonials from '@components/Testimonials.astro'
import FeaturedPosts from '@components/blog/FeaturedPosts.astro'
import { SITE, FEATURE_BLOGS } from '@config'
---

<Layout
  title={`Developer, entrepreneur, and general technology enthusiast | ${SITE.title}`}
>
  <Hero />
  <Experience />
  <Stack />
  <FeaturedWork />
  <Testimonials />
  {
    FEATURE_BLOGS.SHOW_FEATURED_BLOGS ? <FeaturedPosts /> : null
  }
</Layout>
