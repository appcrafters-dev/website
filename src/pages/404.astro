---
import errorImage from '@images/errors/error_page.gif'
import Button from '@components/Button.astro'
import ErrorLayout from '@layouts/ErrorLayout.astro'
import logoIcon from '@images/appcrafters.png'
---

<ErrorLayout>
  <center>
    <div class="ml-3 pt-5">
      <a href="/" aria-label="Home" class="flex" onclick="navigateToHomepage()">
        <img
          src={logoIcon.src}
          alt=""
          class="h-8 w-auto sm:h-9 md:hidden lg:block lg:h-10"
        />
      </a>
    </div>
    <div class="flex h-screen flex-col items-center justify-center">
      <h1 class="mt-5 text-center text-4xl font-bold">404 - Page Not Found</h1>
      <p class="mt-3 text-center text-lg">
        Uh-oh! Looks Like We Took a Wrong Turn.
      </p>
      <div
        class="mt-5 flex flex-wrap items-center justify-center gap-x-10 lg:justify-start"
      >
        <script>
          function navigateToHomepage() {
            window.history.replaceState({}, document.title, "/");
            window.location.href = "/";
          }
        </script>
        
        <Button href="/" class="h-11" onclick="navigateToHomepage()">Oops! Go Back</Button>

        <div class="flex gap-3 sm:gap-4"></div>
      </div>
      <img src={errorImage.src} alt="404" class="w-1/2" />
      
    </div>
  </center>
</ErrorLayout>

<script>

  function navigateToHomepage() {
    window.history.replaceState({}, document.title, "/");
    window.location.href = "/";
  }
  declare global {
    interface Window {
      navigateToHomepage: () => void;
    }
  }

  window.navigateToHomepage = navigateToHomepage;
</script>