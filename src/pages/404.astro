---
import errorImage from '@images/errors/error_page.gif'
import Button from '@components/Button.astro'
import ErrorLayout from '@layouts/ErrorLayout.astro'
import arrow from '@images/errors/arrow.png'
---

<ErrorLayout>
  <center>
    <div class="mt-5 flex flex-col items-center justify-center">
      <img src={errorImage.src} alt="404" class="w-1/3" />
      <h1 class="text-center text-4xl font-bold">404 - Page Not Found</h1>
      <p class="mt-3 text-center text-lg">
        Uh-oh! Looks Like We Took a Wrong Turn.
      </p>
      <div
        class="mt-5 flex flex-wrap items-center justify-center gap-x-10 lg:justify-start"
      >
        <script>
          function navigateToHomepage() {
            window.history.replaceState({}, document.title, "/");
            window.location.href = "/";
          }
        </script>
        
        <Button href="/" class="h-11" onclick="navigateToHomepage()">Go to Home <img src={arrow.src} class="h-8"></Button>

        <div class="flex gap-3 sm:gap-4"></div>
      </div>
      
      
    </div>
  </center>
</ErrorLayout>

<script>

  function navigateToHomepage() {
    window.history.replaceState({}, document.title, "/");
    window.location.href = "/";
  }
  declare global {
    interface Window {
      navigateToHomepage: () => void;
    }
  }

  window.navigateToHomepage = navigateToHomepage;
</script>