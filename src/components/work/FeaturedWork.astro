---
import Container from '@components/Container.astro'
import FeaturedCaseStudy from './FeaturedCaseStudy.astro'
import { getSortedCaseStudies } from '@utils/caseStudies'

const featuredCaseStudies = (await getSortedCaseStudies()).slice(0, 4)
---

<section class="overflow-x-clip bg-white pb-16 pt-8 sm:pb-24 sm:pt-12 md:pt-16">
  <Container>
    <div class="text-center">
      <h2
        class="font-display text-4xl font-semibold text-slate-900 sm:text-5xl"
      >
        Check out our latest work
      </h2>
      <p class="mx-auto mt-4 max-w-md text-lg leading-8 text-slate-700 sm:mt-5">
        Our goal is to create effective digital experiences that make peopleâ€™s
        lives easier and better. We hope our work is a reflection of this.
      </p>
    </div>
    <div
      class="relative mx-auto mt-16 max-w-xl space-y-16 lg:mx-0 lg:max-w-none"
    >
      {
        featuredCaseStudies.map((caseStudy) => (
          <FeaturedCaseStudy caseStudy={caseStudy} />
        ))
      }
    </div>
  </Container>
</section>
